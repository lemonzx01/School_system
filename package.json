    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.24",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "electron-log": "^5.4.3",
    "file-saver": "^2.0.5",
    "jspdf": "^4.2.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.575.0",
    "next": "^14.2.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
